@model Nutricionista.Models.PacienteViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Paciente</h4>
    <hr />
    <dl class="row">
        @if (Model.Pacientes.Any())
        {
            var paciente = Model.Pacientes.First();

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => paciente.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => paciente.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => paciente.Sexo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => paciente.Sexo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => paciente.FechaNacimiento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => paciente.FechaNacimiento)
            </dd>
            <dt class="col-sm-2">
                Edad
            </dt>
            <dd class="col-sm-10">
                @Model.Edad(paciente)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => paciente.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => paciente.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => paciente.Peso)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => paciente.Peso)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => paciente.Estatura)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => paciente.Estatura)
            </dd>
            <dt class="col-sm-2">
                IMC
            </dt>
            <dd class="col-sm-10">
                @Model.IMC(paciente)
            </dd>
            <dt class="col-sm-2">
                Condición
            </dt>
            <dd class="col-sm-10 @Model.IMCColor(paciente)">
                @Model.IMCString(paciente)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Pacientes.First().Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
